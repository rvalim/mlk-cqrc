{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017"],
    "allowJs": true,
    "sourceMap": true,
    "pretty": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
